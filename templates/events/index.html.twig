{% block javascript %}
    {% for event in startedEvents %}
        window.countdown.start("{{ event.id }}", "{{ event.endDate|date }}")
    {% endfor %}
    {% for event in futureEvents %}
        window.countdown.start("{{ event.id }}", "{{ event.startDate|date }}")
    {% endfor %}
{% endblock %}