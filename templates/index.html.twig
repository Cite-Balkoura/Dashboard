{% extends 'layout.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <div class="flex-grow justify-center content-center">
        {% if nextEvent is defined %}
        <div class="flex w-full overflow-hidden h-96">
            <div class="flex w-full flex-col bg-white md:pl-20">
                <div class="py-6 px-8">
                    <h2 class="font-bold text-gray-900 uppercase mb-1 font-grimtown text-2xl text-center my-2">Notre prochain événement :</h2>
                    <h1 class="font-bold text-yellow-600 uppercase mb-1 font-grimtown text-4xl text-center my-2">{{ nextEvent.title }}</h1>
                    <p class="font-raleway mt-8 overflow-y-auto">{{ nextEvent.shortDescription }}</p>
                </div>
            </div>
            <div class="md:flex md:w-full text-white hidden bg-no-repeat bg-center bg-cover pr-20" style="background-image: url('{{ nextEvent.imageUrl|escape }}');">
                <svg xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 40 100">
                    <polygon points="0 0, 0 100, 40 0"/>
                </svg>
            </div>
        </div>
        <div class="md:flex flex-row-reverse h-16 w-full">
            <div class="flex h-full md:w-1/2 py-3 bg-yellow-400 justify-center items-center md:pr-20">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="text-white h-full w-auto" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div id="{{ nextEvent.id }}.days" class="flex whitespace-nowrap ml-4 h-full px-2 bg-white text-yellow-400 text-xl font-grimtown rounded-lg justify-center items-center">0</div>
                <div class="ml-2 font-grimtown font-medium text-white">:</div>
                <div id="{{ nextEvent.id }}.hours" class="flex whitespace-nowrap ml-2 h-full px-2 bg-white text-yellow-400 text-xl font-grimtown rounded-lg justify-center items-center">0</div>
                <div class="ml-2 font-grimtown font-medium text-white">:</div>
                <div id="{{ nextEvent.id }}.minutes" class="flex whitespace-nowrap ml-2 h-full px-2 bg-white text-yellow-400 text-xl font-grimtown rounded-lg justify-center items-center">0</div>
                <div class="ml-2 font-grimtown font-medium text-white">:</div>
                <div id="{{ nextEvent.id }}.seconds" class="flex whitespace-nowrap ml-2 h-full px-2 bg-white text-yellow-400 text-xl font-grimtown rounded-lg justify-center items-center">0</div>
            </div>
            <div class="flex h-full md:w-1/2 bg-yellow-600 justify-center md:justify-between md:pl-20">
                <div></div>
                <div class="p-3">
                    <button class="flex bg-white text-yellow-600 items-center font-bold py-2 px-4 rounded transform hover:scale-105 transition-transform ease-in duration-200">
                        En savoir plus
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                    </button>
                </div>
                <div class="flex h-auto w-auto bg-yellow-400 hidden md:block">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-full w-full" style="fill: rgb(217, 119, 6)" viewBox="0 0 40 100">
                        <polygon points="0 0, 0 100, 40 0"/>
                    </svg>
                </div>
            </div>
        </div>
        <script>window.onload = () => window.countdown.start("{{ nextEvent.id }}", "{{ nextEvent.startDate|date }}")</script>
        {% endif %}
    <div class="flex h-80 w-full overflow-hidden bg-gray-900">
    </div>
    <div class="flex h-80 w-full overflow-hidden bg-white">
    </div>
    </div>
{% endblock %}